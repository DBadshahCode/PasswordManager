<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Password Manager</title>
    @Styles.Render("~/Content/bootstrap/css")
    @Scripts.Render("~/Scripts/bootstrap/js")


</head>
<body>
    <nav class="navbar navbar-expand-lg bg-body-tertiary">
        <div class="container-fluid">
            @Html.ActionLink("Password Manager", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarSupportedContent">
                <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                    <li class="nav-item">
                        @Html.ActionLink("Home", "Index", "Home", new { area = "" }, new { @class = "nav-link active" })
                    </li>
                    <li class="nav-item">
                        @Html.ActionLink("Account", "Index", "Account", new { area = "" }, new { @class = "nav-link" })
                    </li>
                    <li class="nav-item">
                        @Html.ActionLink("Category", "Index", "Category", new { area = "" }, new { @class = "nav-link" })
                    </li>
                    <li class="nav-item">
                        @Html.ActionLink("User", "Index", "User", new { area = "" }, new { @class = "nav-link" })
                    </li>
                    <li class="nav-item">
                        @Html.ActionLink("Email", "Index", "Email", new { area = "" }, new { @class = "nav-link" })
                    </li>
                    <li class="nav-item">
                        @Html.ActionLink("Phone", "Index", "Phone", new { area = "" }, new { @class = "nav-link" })
                    </li>
                    <li class="nav-item">
                        @Html.ActionLink("Website", "Index", "Website", new { area = "" }, new { @class = "nav-link" })
                    </li>
                    @*<li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle" href="#" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                Security Type
                            </a>
                            <ul class="dropdown-menu">
                                <li>
                                    @Html.ActionLink("Password", "Index", "Password", new { area = "" }, new { @class = "dropdown-item" })
                                </li>
                                <li>
                                    @Html.ActionLink("Pin", "Index", "Pin", new { area = "" }, new { @class = "dropdown-item" })
                                </li>
                            </ul>
                        </li>*@
                </ul>
            </div>
        </div>
    </nav>

    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - Password Manager</p>
        </footer>
    </div>

    <script>
        $('#hidetext').mouseover(function () {
            $(this).css('text-security', 'none');
            $(this).css('-webkit-text-security', 'none');
            $(this).css('-moz-text-security', 'none');
        });
        $('#hidetext').mouseleave(function () {
            $(this).css('text-security', 'disc');
            $(this).css('-webkit-text-security', 'disc');
            $(this).css('-moz-text-security', 'disc');
        });
    </script>

    @RenderSection("scripts", required: false)
</body>
</html>
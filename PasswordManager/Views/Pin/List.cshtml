@model IEnumerable<PasswordManager.Models.Pins>

@{
    ViewBag.Title = "Pins";
}

<h2>Pins</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table" id="item-list">
    <thead>
        <tr>
            <th>
                Created Date
            </th>
            <th>
                Updated Date
            </th>
            <th>
                Account
            </th>
            <th>
                Pin
            </th>
            <th>
                Length
            </th>
            <th>
                Generated
            </th>
            <th>
                Status
            </th>
            @*<th></th>*@
        </tr>
    </thead>

</table>

<script>
    $.ajax({
        "type": "GET",
        "url": "/Pin/GetPins",
        "datatype": "json",
        "traditional": true
    }).done(function (data, err) {
        data = JSON.parse(data);
        $("#item-list").DataTable({
            "data": data,
            "datatype": "json",
            "destroy": true,
            "columns": [
                { data: 'CreatedDate' },
                { data: 'UpdatedDate' },
                { data: 'Account' },
                { data: 'Pin' },
                { data: 'Length' },
                { data: 'Generated' },
                { data: 'Status' },
            ],
            dom: 'Bfrtip',
            buttons: [
                'copy', 'csv', 'excel', 'pdf', 'print'
            ]
        })
        console.log(err)
    })
</script>
@model IEnumerable<PasswordManager.Models.Accounts>

@{
    ViewBag.Title = "Accounts";
}

<h2>Accounts</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table" id="item-list">
    <thead>
        <tr>
            <th>
                Created Date
            </th>
            <th>
                Updated Date
            </th>
            <th>
                Name
            </th>
            <th>
                Category
            </th>
            <th>
                Website
            </th>
            <th>
                Username
            </th>
            <th>
                Email
            </th>
            <th>
                Mobile No.
            </th>
            <th>
                Security Type
            </th>
            <th>
                Comments
            </th>
            <th>
                Closed
            </th>
            <th></th>
        </tr>
    </thead>

</table>

<script>
    $.ajax({
        "type": "GET",
        "url": "/Account/GetAccounts",
        "datatype": "json",
        "traditional": true
    }).done(function (data, err) {
        data = JSON.parse(data);
        $("#item-list").DataTable({
            "data": data,
            "datatype": "json",
            "destroy": true,
            "columns": [
                { data: 'CreatedDate' },
                { data: 'UpdatedDate' },
                { data: 'Name' },
                { data: 'Category' },
                { data: 'Website' },
                { data: 'Username' },
                { data: 'EmailAddress' },
                { data: 'MobileNumber' },
                { data: 'SecurityType' },
                { data: 'Comments' },
                { data: 'Closed' },
                {
                    data: null,
                    render: function (data, type, row) {
                        return '<a href="/Account/Edit/' + row.SysId + '">Edit</a> <a href="/Account/Details/' + row.SysId + '">View</a> <a href="/Account/Delete/' + row.SysId + '">Delete</a>';
                    }
                }
            ],
            dom: 'Bfrtip',
            buttons: [
                'copy', 'csv', 'excel', 'pdf', 'print'
            ]
        })
        console.log(err)
    })
</script>